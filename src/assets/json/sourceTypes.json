{
    "article-journal": {
        "label": "Journal article",
        "form": [
            {
                "component": "autoFill",
                "value": ["DOI", "PMID", "PMCID"]
            },
            { "component": "divider", "label": "or enter the article details manually" },
            {
                "component": "text",
                "label": "Title",
                "value": "title",
                "placeholder": "Title"
            },
            {
                "component": "text",
                "label": "Journal name",
                "value": "container-title[0]",
                "placeholder": "Journal name"
            },
            { "component": "divider" },

            { "component": "authors" },

            { "component": "divider" },

            {
                "component": "number",
                "label": "Volume",
                "value": "volume",
                "placeholder": "Enter a number"
            },
            {
                "component": "number",
                "label": "Issue",
                "value": "issue",
                "placeholder": "Enter a number"
            },
            {
                "component": "text",
                "label": "Pages",
                "value": "page",
                "placeholder": "e.g., 123 or 456-890"
            },
            {
                "component": "text",
                "label": "ISSN",
                "value": "ISSN",
                "placeholder": "ISSN number"
            },

            { "component": "divider" },

            {
                "component": "date",
                "label": "Publication date",
                "value": "issued"
            },

            { "component": "divider" },

            {
                "component": "checkbox",
                "label": "Accessed online?",
                "value": "online",
                "on": [
                    {
                        "component": "text",
                        "label": "DOI",
                        "value": "DOI",
                        "placeholder": "e.g., https://doi.org/xxx"
                    },
                    {
                        "component": "date",
                        "label": "Access date",
                        "value": "accessed"
                    }
                ]
            },

            { "component": "divider" },

            {
                "component": "textarea",
                "label": "Annotation",
                "value": "note",
                "placeholder": "Add a summary, key insight, or analysis for this source."
            }
        ]
    },
    "book": {
        "label": "Book",
        "form": [
            {
                "component": "autoFillDoi",
                "label": "Insert a DOI to fill the fields automatically",
                "placeholder": "https://doi.org/xxxx"
            }
        ]
    },
    "webpage": {
        "label": "Webpage",
        "form": [
            {
                "component": "autoFillDoi",
                "label": "Insert a DOI to fill the fields automatically",
                "placeholder": "https://doi.org/xxxx"
            }
        ]
    }
}
