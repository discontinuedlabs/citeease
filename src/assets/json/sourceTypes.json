{
    "article-journal": {
        "label": "Journal article",
        "form": [
            {
                "component": "autoFill",
                "value": ["DOI", "PMID", "PMCID"]
            },

            { "component": "divider", "label": "or enter the article's details manually" },

            {
                "component": "text",
                "label": "Title",
                "value": "title"
            },

            {
                "component": "text",
                "label": "Journal name",
                "value": "container-title[0]"
            },

            { "component": "divider" },

            { "component": "authors" },

            { "component": "divider" },

            {
                "component": "number",
                "label": "Volume",
                "value": "volume"
            },

            {
                "component": "number",
